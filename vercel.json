{
  "version": 2,
  "buildCommand": "npm install --force --prefix frontend && npm run build --prefix frontend",
  "outputDirectory": "frontend/build",
  "installCommand": "npm install --force --prefix frontend",
  "env": {
    "NODE_ENV": "production"
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/index.js"
    },
    {
      "source": "/(.*)",
      "destination": "/frontend/build/index.html"
    }
  ],
  "functions": {
    "api/index.js": {
      "maxDuration": 30
    }
  }
}
