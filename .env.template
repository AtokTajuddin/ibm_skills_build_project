# Virtual Hospital - Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env files to version control!

# =================================================================
# LLM API Configuration
# =================================================================
LLM_API_KEY=your_openrouter_api_key_here

# =================================================================
# Database Configuration
# =================================================================
# For production, use MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/virtualhospital
MONGODB_URI=mongodb://localhost:27017/virtualhospital

# =================================================================
# Authentication
# =================================================================
JWT_SECRET=generate_a_secure_random_string_here

# =================================================================
# Firebase Configuration (for Authentication)
# =================================================================
FIREBASE_API_KEY=your_firebase_api_key
FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_STORAGE_BUCKET=your-project.firebasestorage.app
FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id
FIREBASE_APP_ID=your_app_id

# =================================================================
# Social Authentication (Optional)
# =================================================================
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com

# =================================================================
# Application URLs
# =================================================================
FRONTEND_URL=http://localhost:3000
PORT=5001

# =================================================================
# Production Settings (Vercel)
# =================================================================
NODE_ENV=production
